# Unity e-book 기반 C# 스타일 (.editorconfig)
root = true

[*.cs]
########################################
# 들여쓰기/브레이스(서식)
########################################
indent_style = space
indent_size  = 4

# Allman 스타일: 여는 { 는 새 줄
csharp_new_line_before_open_brace = all

# 한 줄이라도 중괄호 생략 금지
csharp_prefer_braces = true:warning

# else/catch/finally 도 새 줄(Allman 일관)
csharp_new_line_before_else    = true
csharp_new_line_before_catch   = true
csharp_new_line_before_finally = true

########################################
# using / 네임스페이스
########################################
# using 은 파일 상단(네임스페이스 바깥)에 배치
csharp_using_directive_placement = outside_namespace:warning

########################################
# var 사용 원칙
########################################
# type 이 분명/명백할 땐 var 허용, 아니면 금지
dotnet_style_prefer_var_when_type_is_apparent    = true:suggestion
dotnet_style_prefer_var_when_type_is_not_apparent = false:warning
# (원문 예시상 primitive 에서는 피하는 경향 → 기본값은 false)
dotnet_style_prefer_var_for_built_in_types       = false:suggestion

########################################
# 접근 제한자 표기(예시 스타일: private 도 생략하지 않음)
########################################
dotnet_style_require_accessibility_modifiers = for_non_interface_members:warning

########################################
# 프로퍼티 서식
########################################
# 단일 행 읽기 전용 프로퍼티는 식 본문(=>) 선호
csharp_style_expression_bodied_properties = when_possible:suggestion
# 접근자(get/set)도 가능하면 식 본문 허용
csharp_style_expression_bodied_accessors  = when_possible:suggestion

########################################
# 네이밍 규칙
########################################
# 스타일
dotnet_naming_style.pascal.capitalization = pascal_case
dotnet_naming_style.camel.capitalization  = camel_case
dotnet_naming_style._camel.capitalization = camel_case
dotnet_naming_style._camel.required_prefix = _

dotnet_naming_style.interface_pascal_with_i.capitalization = pascal_case
dotnet_naming_style.interface_pascal_with_i.required_prefix = I

# 심볼 그룹
dotnet_naming_symbols.types.applicable_kinds = class, struct, enum, delegate
dotnet_naming_symbols.methods_props_events.applicable_kinds = method, property, event
dotnet_naming_symbols.interfaces.applicable_kinds = interface
dotnet_naming_symbols.public_fields.applicable_kinds = field
dotnet_naming_symbols.public_fields.applicable_accessibilities = public
dotnet_naming_symbols.private_or_protected_fields.applicable_kinds = field
dotnet_naming_symbols.private_or_protected_fields.applicable_accessibilities = private, protected
dotnet_naming_symbols.locals_and_params.applicable_kinds = local, parameter
dotnet_naming_symbols.namespaces.applicable_kinds = namespace
dotnet_naming_symbols.enums.applicable_kinds = enum
dotnet_naming_symbols.enum_members.applicable_kinds = enum_member

# 규칙
# 타입/멤버/이벤트/네임스페이스 → PascalCase
dotnet_naming_rule.types_pascal.symbols  = types
dotnet_naming_rule.types_pascal.style    = pascal
dotnet_naming_rule.types_pascal.severity = warning

dotnet_naming_rule.methods_props_events_pascal.symbols  = methods_props_events
dotnet_naming_rule.methods_props_events_pascal.style    = pascal
dotnet_naming_rule.methods_props_events_pascal.severity = warning

dotnet_naming_rule.namespaces_pascal.symbols  = namespaces
dotnet_naming_rule.namespaces_pascal.style    = pascal
dotnet_naming_rule.namespaces_pascal.severity = warning

# 인터페이스 → I + PascalCase
dotnet_naming_rule.interfaces_I_prefix.symbols  = interfaces
dotnet_naming_rule.interfaces_I_prefix.style    = interface_pascal_with_i
dotnet_naming_rule.interfaces_I_prefix.severity = warning

# public 필드 → PascalCase
dotnet_naming_rule.public_fields_pascal.symbols  = public_fields
dotnet_naming_rule.public_fields_pascal.style    = pascal
dotnet_naming_rule.public_fields_pascal.severity = warning

# private/protected 필드 → _camel
dotnet_naming_rule.private_or_protected_fields__camel.symbols  = private_or_protected_fields
dotnet_naming_rule.private_or_protected_fields__camel.style    = _camel
dotnet_naming_rule.private_or_protected_fields__camel.severity = warning

# 지역 변수/매개변수 → camelCase
dotnet_naming_rule.locals_and_params_camel.symbols  = locals_and_params
dotnet_naming_rule.locals_and_params_camel.style    = camel
dotnet_naming_rule.locals_and_params_camel.severity = warning

# enum 타입/멤버 → PascalCase
dotnet_naming_rule.enums_pascal.symbols  = enums
dotnet_naming_rule.enums_pascal.style    = pascal
dotnet_naming_rule.enums_pascal.severity = warning

dotnet_naming_rule.enum_members_pascal.symbols  = enum_members
dotnet_naming_rule.enum_members_pascal.style    = pascal
dotnet_naming_rule.enum_members_pascal.severity = warning